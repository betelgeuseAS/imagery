{
  "name": "imagery",
  "version": "1.0.0",
  "description": "Software for writing books",
  "private": true,
  "author": "Andrew Samchuk",
  "license": "MIT",
  "scripts": {
    "server": "npm run start --prefix server",
    "client": "npm run start --prefix client",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"yellow,blue\" --kill-others \"npm run server\" \"npm run client\"",
    "postinstall": "(cd ./server && npm install) && (cd ../client && npm install)"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
