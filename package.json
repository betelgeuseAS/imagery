{
  "name": "imagery",
  "version": "1.0.0",
  "description": "Software for writing books",
  "private": true,
  "author": "Andrew Samchuk",
  "license": "Closed Source",
  "productName": "Imagery",
  "main": "electron/electron_v2.js",
  "homepage": "./",
  "scripts": {
    "server": "npm run start --prefix server",
    "client": "npm run start --prefix client",
    "electron": "npm run start --prefix electron",
    "web:dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"yellow,blue\" --kill-others \"npm run server\" \"npm run client\"",
    "electron:dev": "wait-on http-get://127.0.0.1:3000/ && npm run electron",
    "start": "npm-run-all -p web:dev electron:dev",
    "postinstall": "(cd ./electron && npm install) && (cd ./server && npm install) && (cd ../client && npm install)"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.0.1"
  }
}
